    li.archives: a(href=url_for("/archives/")) Posts
    li.about: a(href=url_for("/about/")) About
  div#search
    label(for="search-text") Enter search text:
    input#search-text(type="text" name="search-text")
    input.submit(type="submit" onclick="search()")
  div#search-result
